@page "{id:int}"
@model BwMelder.Pages.Races.DeleteModel

@{
    ViewData["Title"] = "Rennen löschen";
}

<h1>Rennen löschen</h1>
<hr />

<p class="alert alert-danger">Soll dieser Eintrag wirklich gelöscht werden?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race.RowerCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race.RowerCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race.Coxed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race.Coxed)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Race.Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-page="./Index">Zurück zur Übersicht</a>
    </form>
</div>
