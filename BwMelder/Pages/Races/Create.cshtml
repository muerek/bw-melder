@page
@model BwMelder.Pages.Races.CreateModel

@{
    ViewData["Title"] = "Rennen anlegen";
}

<h1>Rennen anlegen</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Race.Number" class="control-label"></label>
                <input asp-for="Race.Number" class="form-control" />
                <span asp-validation-for="Race.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.Name" class="control-label"></label>
                <input asp-for="Race.Name" class="form-control" />
                <span asp-validation-for="Race.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.RowerCount" class="control-label"></label>
                <input asp-for="Race.RowerCount" class="form-control" />
                <span asp-validation-for="Race.RowerCount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Race.Coxed" /> @Html.DisplayNameFor(model => model.Race.Coxed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
