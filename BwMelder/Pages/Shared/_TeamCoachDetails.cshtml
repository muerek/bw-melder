@model BwMelder.Model.TeamCoach

<h4>Stammdaten</h4>
<dl class="row">
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.FullName)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.FullName)
    </dd>
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.ClubName)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.ClubName)
    </dd>
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.DateOfBirth)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.DateOfBirth)
        @* Highlight minors with a badge. *@
        @if (Model.DateOfBirth.AddYears(18) > DateTime.Today)
        {
            <span class="badge badge-info">U19</span>
        }
    </dd>
</dl>

