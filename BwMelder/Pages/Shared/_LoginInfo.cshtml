@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<ul class="navbar-nav">
    <li class="nav-item">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-page="/Admin/Logout" method="post">
                <button type="submit" class="nav-link text-dark btn btn-link">@User.Identity!.Name abmelden</button>
            </form>
        }
        else
        {
            <a class="nav-link text-dark" asp-page="/Admin/Login">Anmelden</a>
        }
    </li>
</ul>