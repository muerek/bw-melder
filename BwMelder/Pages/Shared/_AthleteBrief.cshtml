@model BwMelder.Model.Athlete

<h5 class="card-title">@Html.DisplayFor(model => model.FullName)</h5>
<dl class="row">
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.DateOfBirth)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.DateOfBirth)
    </dd>
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.ShirtSize)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.ShirtSize)
    </dd>
    <dt class="col-sm-3 col-lg-2">
        @Html.DisplayNameFor(model => model.Diet)
    </dt>
    <dd class="col-sm-9 col-lg-10">
        @Html.DisplayFor(model => model.Diet.Choice)
        @if (Model.Diet.Restrictions != null)
        {<text>+ @Model.Diet.Restrictions</text>}
    </dd>
</dl>

