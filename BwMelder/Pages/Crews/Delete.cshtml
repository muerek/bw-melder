@page "{id:guid}"
@model BwMelder.Pages.Crews.DeleteModel

@{
    ViewData["Title"] = "Nominierung löschen";
}

<h1>Nominierung löschen</h1>
<hr />

<p class="alert alert-danger">Soll dieser Eintrag wirklich gelöscht werden?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crew.ClubName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crew.ClubName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crew.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crew.Race.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Crew.HomeCoach)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Crew.HomeCoach.FullName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Crew.Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-page="./Index">Zurück zur Übersicht</a>
    </form>
</div>
