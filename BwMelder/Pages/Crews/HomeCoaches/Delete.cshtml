@page "{id:guid}"
@model BwMelder.Pages.Crews.HomeCoaches.DeleteModel

@{
    ViewData["Title"] = "Heimtrainer löschen";
}

<h1>Heimtrainer löschen</h1>
<partial name="_CrewInfo" model="Model.Crew" />
<hr />

<p class="alert alert-danger">Soll dieser Eintrag wirklich gelöscht werden?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeCoach.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeCoach.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeCoach.Contact.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeCoach.Contact.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeCoach.Contact.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeCoach.Contact.Phone)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="HomeCoach.Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-page="../Details" asp-route-id="@Model.HomeCoach.CrewId">Zurück zur Mannschaft</a>
    </form>
</div>
