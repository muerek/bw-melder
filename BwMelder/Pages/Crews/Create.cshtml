@page
@model BwMelder.Pages.Crews.CreateModel

@{
    ViewData["Title"] = "Mannschaft nominieren";
}

<h1>Mannschaft nominieren</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Crew.Race" class="control-label"></label>
                <select asp-for="Crew.RaceId" class="form-control" asp-items="ViewBag.RaceId"></select>
                <span asp-validation-for="Crew.RaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crew.ClubName" class="control-label"></label>
                <input asp-for="Crew.ClubName" class="form-control" />
                <span asp-validation-for="Crew.ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
