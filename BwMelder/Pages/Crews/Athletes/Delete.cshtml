@page "{id:guid}"
@model BwMelder.Pages.Crews.Athletes.DeleteModel

@{
    ViewData["Title"] = "Sportler löschen";
}

<h1>Sportler löschen</h1>
<partial name="_CrewInfo" model="Model.Crew" />
<hr />

<p class="alert alert-danger">Soll dieser Eintrag wirklich gelöscht werden?</p>

<partial name="_AthleteDetails" model="@Model.Athlete" />

<div>  
    <form method="post">
        <input type="hidden" asp-for="Athlete!.Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-page="../Details" asp-route-id="@Model.Athlete!.CrewId">Zurück zur Mannschaft</a>
    </form>
</div>
