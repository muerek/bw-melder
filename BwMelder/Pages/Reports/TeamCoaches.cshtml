@page
@model BwMelder.Pages.Reports.TeamCoachesModel

@{
    ViewData["Title"] = "Alle Betreuerdaten";
}

<h1>@ViewData["Title"]</h1>

<p>
    <button class="btn btn-secondary" onclick="tableToCsv('TeamCoaches_Table')">CSV herunterladen</button>
</p>

<table class="table table-hover table-sm table-responsive" id="TeamCoaches_Table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].ClubName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Contact.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Contact.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].ShirtSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].HasPublicTransportTicket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Diet.Choice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Diet.Restrictions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].DriversLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamCoach[0].Comments)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeamCoach) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClubName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.Phone)
            </td>
            <td>
                @Html.DisplayFor(model => item.ShirtSize)
            </td>
            <td>
                @(item.HasPublicTransportTicket ? "Ja" : "Nein")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet.Choice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet.Restrictions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriversLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
        </tr>
}
    </tbody>
</table>
